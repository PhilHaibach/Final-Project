@model FinalProject.Models.HomeViewModel

<html>

    <head>
        <link href="~/Styles/Home.css" rel="stylesheet" />
        <title>Final Project</title>
    </head>

    <body>
        <script src="~/Scripts/jquery-2.1.1.min.js"></script>
        <script src="~/Scripts/jquery-ui.min.js"></script>
        <script src="~/Scripts/Home.js"></script>
        
        <div class="home">
            <header>
                <h1>Welcome to Cuyahoga Community College Student Services Online</h1>
                <p>Cuyahoga Community College recognizes students' rights to access personal and academic records in accordance with the Family Educational Rights and Privacy Act of 1974 (FERPA) as amended by Public Law 93-568.</p>
            </header>

            <!--Login page-->

            <div class="loginPage">
                <div class="loginPageTop">
                    <div class="topText">Already have an account with us?  Returning users may log in by entering their site username and password.</div>
                    <div class="mobileTopText">Log In</div>
                    <div class="topInfo">
                        <label for="LoginUsername">Username</label>
                        <input type="text" name="LoginUsername" class="loginUserNameInput"/><br />
                        <div class="usernameErrorLogin">Username error</div>

                        <label for="LoginPassword">Password</label>
                        <input type="text" name="LoginPassword" class="loginPasswordInput"/><br />
                        <div class="passwordErrorLogin">Password error</div>

                        <input type="button" class="LoginButton" value="Log In" />
                    </div>
                </div>

                <div class="separater"></div>

                <div class="loginPageBottom">
                    <div class="bottomText">New users, please create a new account by providing us with some basic information.</div>
                    <div class="mobileBottomText">Create New Account</div>
                    <div class="bottomInfo">
                        <label for="NewUsername">Username</label>
                        <input type="text" name="NewUsername" class="createUserNameInput" /><br />
                        <div class="usernameErrorCreate"></div>

                        <label for="NewPassword">Password</label>
                        <input type="text" name="NewPassword" class="createPasswordInput"/><br />
                        <div class="passwordErrorCreate"></div>

                        <label for="NewEmail">E-mail Address</label>
                        <input type="text" name="NewEmail" class="createEmailInput"/><br />
                        <div class="emailError"></div>

                        <label for="NewRepeat">Repeat E-mail Address</label>
                        <input type="text" name="NewRepeat" class="repeatEmailInput"/><br />
                        <div class="repeatEmailError"></div>

                        <input type="button" class="CreateAccountButton" value="Create Account" />
                    </div>
                </div>
            </div>

            <!--Account info page-->

            <div class="infoPage">
                <div class="accountInfoHeading">Account Information</div>
                <div class="infoPageTop">

                </div>

                <div class="separater"></div>

                <div class="infoPageBottom">
                    <label for="ElementName">Element Name</label>
                    <input type="text" name="ElementName" class="ElementNameInput"/><br />
                    <div class="addNameError">name error</div>

                    <label for="ElementValue">Element Value</label>
                    <input type="text" name="ElementValue" class="ElementValueInput"/><br />
                    <div class="addValueError">value error</div>
                    
                    <input type="button" class="addInfoButton" value="Add" />
                </div>
            </div>
        </div>

        <footer>
            <div class="footer">Cuyahoga Community College</div>
            <div class="footer">700 Carnegie Avenue, Cleveland, Ohio 44115</div>
        </footer>
    </body>
</html>